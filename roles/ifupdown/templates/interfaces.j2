{% set intvars = interfaces[ansible_hostname] %}
# /etc/network/interfaces template for servers ({{ansible_hostname}})
# Created by Ansible

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    post-up ip route add default via 192.168.0.1


{% for iface in intvars['ifaces'] %}
auto {{ iface }}
iface {{ iface }} inet static
    address {{ intvars['ifaces'][iface].ip }}
    netmask {{ intvars['ifaces'][iface].mask }}
    up ip route add 10.0.0.0/8 via {{ intvars['ifaces'][iface].gateway }}
    up ip route add 172.16.0.0/16 via {{ intvars['ifaces'][iface].gateway }}
{% endfor %}
